            .mui-col-lg-8.mui-col-xs-12
                #img-container
                    span#highlighted-image-placeholder
            .mui-col-lg-4.mui-col-xs-12
                .events-container.mui-panel
                    h2 Events
                    ul#events.mui-list--unstyled