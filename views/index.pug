extends layout

block content
    .mui-container-fluid
        .mui-row
            .mui-col-xs-12
                button#start-feeder-btn.mui-btn.mui-btn--primary(type="button", disabled) Feed
                button#start-speech-recording-btn.mui-btn.mui-btn--accent(type="button", disabled) Start speech recording
